<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>6104</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <disabletopbar>no</disabletopbar>
  <controls>
    <!-- :::::::::::::: BACKGROUNDS :::::::::::::: -->
    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <texture>background.png</texture>
      <animation effect="fade" time="400" delay="0">WindowOpen</animation>
    </control>
    <control>
      <description>Backdrop Overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1925</width>
      <height>1085</height>
      <texture>overlay_background.png</texture>
      <visible>!facadeview.filmstrip</visible>
    </control>
    <control>
      <description>Backdrop Overlay - Filmstrip</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1925</width>
      <height>1085</height>
      <texture>overlay_filmstrip.png</texture>
      <visible>facadeview.filmstrip</visible>
    </control>
    <control>
      <description>Backdrop Overlay - Filmstrip/Coverflow</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1925</width>
      <height>1085</height>
      <texture>overlay_background_top.png</texture>
      <visible>facadeview.filmstrip</visible>
    </control>
    <control>
      <description>Backdrop Overlay - Thumbs View</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1925</width>
      <height>1085</height>
      <texture>overlay_thumbs.png</texture>
      <visible>[facadeview.smallicons|facadeview.largeicons]</visible>
    </control>
    <control>
      <description>Backdrop Overlay Bar</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>998</posY>
      <width>1920</width>
      <height>82</height>
      <texture>overlay_bar_bottom.png</texture>
    </control>
    <!-- :::::::::::::: TOP BAR :::::::::::::: -->
		
    <control Style="BigTitle">
      <description>Page Title</description>
      <type>label</type>
      <id>1</id>
      <posX>70</posX>
      <posY>45</posY>
      <width>1220</width>
      <label>Posters</label>
      <visible>control.HasFocus(50)+!player.hasmedia</visible>
    </control>
    <control Style="Time">
      <description>Date</description>
      <type>label</type>
      <id>1</id>
      <posX>70</posX>
      <posY>120</posY>
      <label>#date / #time</label>
      <visible>control.hasfocus(50)</visible>
    </control>
    

    <!--      :: HIDDEN MENU ::      -->
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>106</buttonwidth>
      <buttonheight>720</buttonheight>
      <width>568</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
      <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
      <control>
        <type>image</type>
        <posX>0</posX>
        <posY>0</posY>
        <width>400</width>
        <height>998</height>
        <texture>hidden_menu_short_background.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)+control.isvisible(50)</visible>
        <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <type>label</type>
        <id>0</id>
        <posX>370</posX>
        <posY>178</posY>
        <width>300</width>
        <font>font3</font>
        <label>Posters</label>
        <align>right</align>
        <visible>!Control.HasFocus(50)+Control.IsVisible(50)</visible>
        <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)+control.isvisible(50)</visible>
        <control>
          <description>button group</description>
          <type>group</type>
          <posX>0</posX>
          <posY>230</posY>
          <layout>StackLayout(0, Vertical, true)</layout>
          <visible>!Control.HasFocus(50)</visible>
          <control>
            <description>Change Layout</description>
            <type>button</type>
            <id>2</id>
            <label>Change Layout</label>
            <onleft>50</onleft>
            <onright>50</onright>
			<onup>141</onup>
			<ondown>140</ondown>
          </control>
		  <control>
            <description>Fanart</description>
            <type>button</type>
            <id>140</id>
            <label>Fanart</label>
            <onleft>50</onleft>
            <onright>50</onright>
			<onup>2</onup>
			<ondown>141</ondown>
          </control>
		  <control>
            <description>Wide Banners</description>
            <type>button</type>
            <id>141</id>
            <label>Wide Banners</label>
            <onleft>50</onleft>
            <onright>50</onright>
			<onup>140</onup>
			<ondown>2</ondown>
          </control>
		  
        </control>
      </control>
    </control>
    <!-- Selected Facade Item -->
    <control Style="DetailText">
      <description>Number of Files Label</description>
      <type>label</type>
      <label>#Anime3.Posters.SelectedSource | Default: #Anime3.Posters.SelectedPosterIsDefault | Disabled: #Anime3.Posters.SelectedPosterIsDisabled</label>
      <posX>70</posX>
      <posY>1030</posY>
      <width>1000</width>
      <align>left</align>
      <visible>control.isvisible(50)</visible>
    </control>

    <!-- :::::::::::::: FACADE :::::::::::::: -->
    <control>
      <type>group</type>
      <description>group element</description>
      <id>28</id>
      <layout>StackLayout0, Vertical, true</layout>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>Graphical Thumbpanel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <dimColor>90ffffff</dimColor>
          <onleft>2</onleft>
          <onright>50</onright>
          <textureUp>-</textureUp>
          <textureDown>-</textureDown>
          <posX>70</posX>
          <posY>200</posY>
          <width>1850</width>
          <height>800</height>
          <scrollOffset>0</scrollOffset>
          <itemWidth>126</itemWidth>
          <itemHeight>225</itemHeight>
          <textureWidth>120</textureWidth>
          <textureHeight>210</textureHeight>
          <thumbWidth>120</thumbWidth>
          <thumbHeight>210</thumbHeight>
          <thumbPosX>0</thumbPosX>
          <thumbPosY>0</thumbPosY>
          <itemWidthBig>126</itemWidthBig>
          <itemHeightBig>225</itemHeightBig>
          <textureWidthBig>120</textureWidthBig>
          <textureHeightBig>210</textureHeightBig>
          <thumbWidthBig>120</thumbWidthBig>
          <thumbHeightBig>210</thumbHeightBig>
          <thumbPosXBig>0</thumbPosXBig>
          <thumbPosYBig>0</thumbPosYBig>
          <zoomXPixels>38</zoomXPixels>
          <zoomYPixels>48</zoomYPixels>
          <hideUnfocusTexture>yes</hideUnfocusTexture>
          <renderFocusText>no</renderFocusText>
          <renderUnfocusText>no</renderUnfocusText>
          <showFrame>true</showFrame>
          <thumbZoom>yes</thumbZoom>
          <enableFocusZoom>no</enableFocusZoom>
          <keepaspectratio>no</keepaspectratio>
          <textureMask>fanart_thumb_frame_mask.png</textureMask>
          <unfocusedAlpha>255</unfocusedAlpha>
          <frameNoFocus>pic_thumb_frame_nofocus.png</frameNoFocus>
          <frameFocus>pic_thumb_frame_focus.png</frameFocus>
          <imageFolder>-</imageFolder>
          <imageFolderFocus>-</imageFolderFocus>
          <dimColor>ffffffff</dimColor>
          <spinPosX>2500</spinPosX>
          <spinCanFocus>no</spinCanFocus>
          <scrollbarbg>scroll_bar_background.png</scrollbarbg>
          <scrollbartop>scrollbar_bar_nib_left_vert.png</scrollbartop>
          <scrollbarbottom>scrollbar_bar_nib_right_vert.png</scrollbarbottom>
          <scrollbarwidth>1</scrollbarwidth>
          <scrollbarXOff>-20</scrollbarXOff>
          <keepaspectratio>yes</keepaspectratio>
          <animation effect="slide" start="0" end="370" tween="back" ease="easeout" time="300" reversible="false">unfocus</animation>
          <animation effect="slide" start="370" end="0" tween="back" ease="easeout" time="300" reversible="false">focus</animation>
        </control>
        <control>
			<description>Filmstrip view </description>
			<type>filmstrip</type>
			<id>50</id>					
			<onup>2</onup>
			<posX>70</posX>
			<posY>475</posY>
			<width>1920</width>
			<textXOff>0</textXOff>
			<textYOff>1500</textYOff>
			<scrollOffset>3</scrollOffset>
			<spinPosX>2100</spinPosX>
			<spinCanFocus>no</spinCanFocus>
			<itemWidth>255</itemWidth>
			<itemHeight>370</itemHeight>
			<textureWidth>245</textureWidth>
			<textureHeight>360</textureHeight>
			<thumbWidth>245</thumbWidth>
			<thumbHeight>360</thumbHeight>
			<thumbPosX>0</thumbPosX>
			<thumbPosY>0</thumbPosY>
			<font>font2</font>
			<InfoImage></InfoImage>
			<imageFolder>-</imageFolder>
			<imageFolderFocus>-</imageFolderFocus>
			<thumbs mask="video_thumb_frame_mask.png"></thumbs>
			<InfoImage mask="video_thumb_frame_mask.png"></InfoImage>
			<unfocusedAlpha>255</unfocusedAlpha>
			<frame>video_thumb_frame_nofocus.png</frame>
			<frameFocus>video_thumb_frame_filmstrip_focus.png</frameFocus>
			<showFrame>yes</showFrame>
			<showFolder>yes</showFolder>
			<showBackGround>no</showBackGround>
			<showInfoImage>no</showInfoImage>
			<scrollbarbg>scroll_bar_background.png</scrollbarbg>
			<scrollbarLeft>scrollbar_bar_nib_left_hor.png</scrollbarLeft>
			<scrollbarRight>scrollbar_bar_nib_right_hor.png</scrollbarRight>
			<scrollbarwidth>1</scrollbarwidth>
			<scrollbarYOff>416</scrollbarYOff>
			<keepaspectratio>no</keepaspectratio>
			<thumbAnimation effect="zoom" acceleration="-2" start="100,100" reversible="false" end="138,138" center="0,860" time="200">focus</thumbAnimation>
			<thumbAnimation effect="zoom" start="138,138" reversible="false" end="100,100" center="0,860" time="100">unfocus</thumbAnimation>				
			<animation effect="slide" start="0" end="370"  tween="back" ease="easeout" time="300" reversible="false">unfocus</animation>
			<animation effect="slide" start="370" end="0"  tween="back" ease="easeout" time="300" reversible="false">focus</animation>
		</control>
      </control>
    </control>
    <import>common.overlay.xml</import>
  </controls>
</window>
