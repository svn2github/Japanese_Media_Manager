<?xml version="1.0" encoding="utf-8"?>
<window> 
	<controls>

		<!-- Episode Thumbnail -->
		<control>
			<description>Episode Thumb Backround</description>
			<type>image</type>
			<id>0</id>
			<posX>1315</posX>
			<posY>234</posY>            
			<width>550</width>
			<height>368</height>
			<texture>episode_thumb_background_reflect.png</texture>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<visible>control.isvisible(1239)+facadeview.list</visible>
		</control>		

		<control>
			<description>Default Episode Thumb</description>
			<type>image</type>
			<id>0</id>
			<posX>1345</posX>
			<posY>264</posY>            
			<width>490</width>
			<height>277</height>
			<texture>default_pictures.png</texture>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>Big Episode Thumb</description>
			<type>image</type>
			<id>67</id>
			<posX>1345</posX>
			<posY>264</posY>            
			<width>490</width>
			<height>277</height>
			<keepaspectratio>yes</keepaspectratio>
			<zoom>yes</zoom>            
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<texture>#Anime3.Episode.Image</texture>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>Episode Thumb Backround</description>
			<type>image</type>
			<id>0</id>
			<posX>1315</posX>
			<posY>234</posY>            
			<width>550</width>
			<height>368</height>
			<texture>episode_thumb_background_overlay_reflect.png</texture>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<visible>control.isvisible(1239)+facadeview.list</visible>
		</control>	

		<!-- Episode Name -->
		<control Style="DetailTitle">
			<label>#Anime3.Episode.EpisodeDisplayName</label>
			<type>label</type>
			<posX>620</posX>
			<posY>180</posY>
			<width>1200</width>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>		

		<!-- Episode Description -->
		<control Style="DetailTextDroid">
			<description>Episode Plot</description>
			<type>textboxscrollup</type>
			<id>631</id>
			<posX>1315</posX>
			<posY>662</posY>
			<width>570</width>
			<height>235</height>
			<seperator>-----------------------------------------------------------------------------------</seperator>
			<label>#Anime3.Episode.Description</label>
			<scrollStartDelaySec>10</scrollStartDelaySec>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<!-- LOGOS -->
        <control>
            <description>Logos</description>
            <type>image</type>
            <id>66</id>
            <posX>400</posX>
            <posY>1025</posY>
            <width>1000</width>
            <height>40</height>
            <texture>#Anime3.Logos</texture>
            <keepaspectratio>yes</keepaspectratio>
            <spaceBetweenItems>0</spaceBetweenItems>
			<align>left</align>
            <visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
        </control>
		
		<!-- Rating -->
		<control Style="DetailTitle">
			<label>Rating</label>
			<type>label</type>
			<posX>1315</posX>
			<posY>596</posY>
			<width>130</width>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="DetailText">
			<label>#Anime3.Episode.RawRating</label>
			<type>label</type>
			<posX>1440</posX>
			<posY>596</posY>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<!-- Run Time -->
		<control Style="DetailTitle">
			<label>Run Time</label>
			<type>label</type>
			<posX>1585</posX>
			<posY>596</posY>
			<width>130</width>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="DetailText">
			<label>#Anime3.Episode.Length</label>
			<type>label</type>
			<posX>1730</posX>
			<posY>596</posY>
			<visible>control.isvisible(1239)+facadeview.list</visible>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

	</controls>
</window>