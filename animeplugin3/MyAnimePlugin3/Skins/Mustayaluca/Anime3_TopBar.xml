<window>
	<controls>	

		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>0</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
			<visible>Control.HasFocus(50)</visible>
		</control>

		<control Style="DetailText">
			<description>Group Count</description>
			<type>label</type>
			<label>#Anime3.GroupCount Groups / #Anime3.SimpleCurrentView</label>
			<posX>1850</posX>
			<posY>1030</posY>
			<width>800</width>
			<align>right</align>
			<visible>[facadeview.list|facadeview.coverflow|facadeview.filmstrip]+control.isvisible(1238)+!player.hasmedia</visible>			
			<animation effect="fade" time="250">WindowClose</animation>
		</control>	

			

	</controls>
</window>