<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8" standalone="yes"-->
<window>
	<id>6101</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	
	<controls>

		<!-- Import Dummy controls to handle visibility -->
		<import>Anime3_Dummy.xml</import>
		
		<!-- ********************** BACKGROUNDS************************************** -->
		
		<!-- Default Background -->
		<control>
			<description>Default Background when no Fanart Displayed</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1920</width>
			<height>1080</height>
			<texture>background.png</texture>
		</control>
		
		<!-- Fanart Fading -->
		<control>
			<description>Fanart Background #1</description>
			<type>image</type>
			<id>524</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1920</width>
			<height>1080</height>
			<texture>#Anime3.Fanart.1</texture>
			<animation effect="fade" time="300">visible</animation>
			<animation effect="fade" time="300" delay="300">hidden</animation>
		</control>
		
		<!-- Backgrounds -->
		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
			<visible>!facadeview.filmstrip+!facadeview.coverflow</visible>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background_top.png</texture>
			<visible>facadeview.filmstrip|facadeview.coverflow</visible>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_coverflow.png</texture>
			<visible>facadeview.coverflow</visible>
		</control>

		<control>
			<description>Backdrop Overlay - Filmstrip</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_filmstrip.png</texture>
			<visible>facadeview.filmstrip+control.isvisible(50)</visible>
		</control>

		<control>
			<description>Backdrop Overlay - List View</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_poster_list.png</texture>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>

		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>
		
		<import>anime3_HiddenMenu.xml</import>
		<import>anime3_Facade.xml</import>
		<import>anime3_Groups_ListPosters.xml</import>
		<import>anime3_Groups_Filmstrip.xml</import>
		<import>anime3_Groups_Coverflow.xml</import>
		<import>anime3_Groups_Banners.xml</import>
		<import>anime3_EpisodeList.xml</import>
		<import>anime3_TopBar.xml</import>
		<import>Anime3_QueueStatus.xml</import>
		<import>Anime3_SkinSettings.xml</import>
		<import>common.overlay.xml</import>
		
		
	
		<!-- *********************** FIND PANEL *********************************** -->
		<!-- List / banner view -->
		<control>
			<description>Find Label</description>
			<type>label</type>
			<id>0</id>
			<posX>612</posX>
			<posY>130</posY>
			<width>300</width>
			<font>font8</font>
			<label>Find:</label>
			<visible>[facadeview.list]+control.isvisible(3463)</visible>
		</control>
		<control>
			<description>find text</description>
			<type>label</type>
			<id>0</id>
			<posX>710</posX>
			<posY>130</posY>
			<width>570</width>
			<font>font8</font>
			<label>#Anime3.FindText</label>
			<visible>[facadeview.list]+control.isvisible(3463)</visible>
		</control>
		<control>
            <description>Find description *-key (T9)</description>
            <type>fadelabel</type>
            <id>0</id>
            <posX>612</posX>
            <posY>170</posY>
            <width>900</width>
            <label>*=#Anime3.FindAsteriskMode #=#Anime3.FindSharpMode</label>
            <font>font14</font>
			<textcolor>6aa5cb</textcolor>
			<visible>Control.IsVisible(3463)+Control.IsVisible(3464)+!Player.hasmedia</visible>
        </control>
		<control>
            <description>Find description C+W-key (text)</description>
            <type>fadelabel</type>
            <id>0</id>
            <posX>612</posX>
            <posY>170</posY>
            <width>900</width>
            <font>font14</font>
			<textcolor>6aa5cb</textcolor>
            <label>C+W=Start Word (#Anime3.FindStartWord) TAB=Next Match</label>
            <visible>Control.IsVisible(3463)+Control.IsVisible(3465)+!Player.hasmedia</visible>
        </control>
		<control>
            <description>Find description C+M-key</description>
            <type>label</type>
            <id>0</id>
            <posX>1000</posX>
            <posY>130</posY>
            <width>600</width>
            <font>font14</font>
			<textcolor>6aa5cb</textcolor>
            <align>left</align>
            <label>C+M=Mode (#Anime3.FindMode)</label>
            <visible>Control.IsVisible(3463)</visible>
        </control>
	
	</controls>
</window>