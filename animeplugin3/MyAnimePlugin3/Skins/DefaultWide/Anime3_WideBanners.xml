<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>6106</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>
		<!-- :::::::::::::: BACKGROUNDS :::::::::::::: -->

		<control>
			<id>0</id>
			<type>image</type>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>
			<dimColor>50ffffff</dimColor>
			<texture>Background.png</texture>
		</control>

	  <!-- ************************** TOP BAR ***********************************-->

	  <control>
		<type>image</type>
		<id>0</id>
		<posX>10</posX>
		<posY>5</posY>
		<width>34</width>
		<height>40</height>
		<texture>hover_my anime.png</texture>
		<visible>true</visible>
	  </control>

	  <control>
		<type>label</type>
		<description>Wide Banners</description>
		<id>0</id>
		<posX>60</posX>
		<posY>10</posY>
		<width>900</width>
		<align>left</align>
		<font>font13</font>
		<textcolor>ffFFFFFF</textcolor>
		<label>Wide Banners</label>
	  </control>

	  <control>
		<description>Date Time</description>
		<type>label</type>
		<id>0</id>
		<posX>1260</posX>
		<posY>1</posY>
		<label>#date / #time</label>
		<align>right</align>
		<font>font12</font>
		<textcolor>ffa9d0f7</textcolor>
		<animation effect="fade" time="250">WindowClose</animation>
	  </control>
	  
		<!-- :::::::::::::: INFO LABELS :::::::::::::: -->


		<control>
			<description>WideBanners Source Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>610</posY>
			<width>700</width>
			<font>font12</font>
			<label>Source:</label>
		</control>
		<control>
			<description>Poster Source</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>610</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.WideBanners.SelectedSource</label>
		</control>

		<control>
			<description>IsDisabled Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>640</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Disabled:</label>
		</control>
		<control>
			<description>IsDisabled</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>640</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.WideBanners.SelectedBannerIsDisabled</label>
		</control>

		<control>
			<description>Is Default Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>670</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Default</label>
		</control>
		<control>
			<description>Is Default:</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>670</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.WideBanners.SelectedBannerIsDefault</label>
		</control>

		<!--  ************** HIDDEN MENU *****************  -->
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>140</defaultcontrol>
			<onexit>50</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>106</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>568</width>
			<height>900</height>
			<dimColor>00ffffff</dimColor>
			<control>
				<type>image</type>
				<posX>26</posX>
				<posY>78</posY>
				<width>367</width>
				<height>591</height>
				<texture>Backslide.png</texture>
				<colorDiffuse>fffffffff</colorDiffuse>
				<visible>!Control.HasFocus(50)</visible>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
				<visible>!Control.HasFocus(50)</visible>
				<control>
					<description>button group</description>
					<type>group</type>
					<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
					<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
					<posX>71</posX>
					<posY>121</posY>
					<layout>StackLayout</layout>
					<visible>!Control.HasFocus(50)</visible>

					<control>
						<description>Fanart</description>
						<type>button</type>
						<id>140</id>
						<label>Fanart</label>
						<onleft>50</onleft>
						<onup>141</onup>
						<ondown>141</ondown>
					</control>

					<control>
						<description>Posters</description>
						<type>button</type>
						<id>141</id>
						<label>Posters</label>
						<onleft>50</onleft>
						<onup>140</onup>
						<ondown>140</ondown>
					</control>
				</control>
			</control>
		</control>

		<!-- :::::::::::::: THUMBNAILPANEL :::::::::::::: -->
		<control>
			<type>group</type>
			<description>group element</description>
			<id>28</id>
			<layout>StackLayout</layout>
			<posX>60</posX>
			<posY>97</posY>
			<control>
				<description>composite control consisting of a thumbnail panel</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>graphical thumbpanel</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<posX>13</posX>
					<posY>92</posY>
					<width>1280</width>
					<height>500</height>
					<!-- up/down buttons & page # -->
					<onleft>140</onleft>
					<onright>140</onright>
					<spinPosX>-50</spinPosX>
					<spinPosY>-50</spinPosY>
					<spinCanFocus>no</spinCanFocus>
					<spinColor>ffffffff</spinColor>
					<!-- Textures -->
					<imageFolder>-</imageFolder>
					<!-- Text -->
					<font>font10</font>
					<selectedColor>00ffffff</selectedColor>
					<textcolor>ffffffff</textcolor>
					<colordiffuse>ffffffff</colordiffuse>
					<remoteColor>FF868686</remoteColor>
					
					<suffix>|</suffix>
					<itemWidthBig>412</itemWidthBig>
					<itemHeightBig>86</itemHeightBig>
					<!-- boxes -->
					<textureWidthBig>424</textureWidthBig>
					<textureHeightBig>79</textureHeightBig>
					<!-- banners -->
					<thumbWidthBig>400</thumbWidthBig>
					<thumbHeightBig>74</thumbHeightBig>
					<thumbPosXBig>7</thumbPosXBig>
					<thumbPosYBig>2</thumbPosYBig>
					<thumbZoom>no</thumbZoom>
					<!-- text (No banner) -->
					<textXOff>0</textXOff>
					<textYOff>0</textYOff>
					<keepaspectratio>no</keepaspectratio>
					<enableFocusZoom>no</enableFocusZoom>
					<scrollOffset>1</scrollOffset>
					<unfocusedAlpha>150</unfocusedAlpha>
				</control>
			</control>
		</control>

	</controls>
</window>