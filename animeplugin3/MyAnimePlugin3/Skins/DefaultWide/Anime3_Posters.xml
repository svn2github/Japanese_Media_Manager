<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>6104</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>
		<!-- :::::::::::::: BACKGROUNDS :::::::::::::: -->

		<control>
			<id>0</id>
			<type>image</type>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>
			<dimColor>50ffffff</dimColor>
			<texture>Background.png</texture>
		</control>

	  <!-- ************************** TOP BAR ***********************************-->

	  <control>
		<type>image</type>
		<id>0</id>
		<posX>10</posX>
		<posY>5</posY>
		<width>34</width>
		<height>40</height>
		<texture>hover_my anime3.png</texture>
		<visible>true</visible>
	  </control>

	  <control>
		<type>label</type>
		<description>Posters</description>
		<id>0</id>
		<posX>60</posX>
		<posY>10</posY>
		<width>900</width>
		<align>left</align>
		<font>font13</font>
		<textcolor>ffFFFFFF</textcolor>
		<label>Posters</label>
	  </control>

	  <control>
		<description>Date Time</description>
		<type>label</type>
		<id>0</id>
		<posX>1260</posX>
		<posY>1</posY>
		<label>#date / #time</label>
		<align>right</align>
		<font>font12</font>
		<textcolor>ffa9d0f7</textcolor>
		<animation effect="fade" time="250">WindowClose</animation>
	  </control>
	  
		<!-- :::::::::::::: INFO LABELS :::::::::::::: -->

		<control>
			<description>Poster Source Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>610</posY>
			<width>700</width>
			<font>font12</font>
			<label>Source:</label>
		</control>
		<control>
			<description>Poster Source</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>610</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.Posters.SelectedSource</label>
		</control>

		<control>
			<description>IsDisabled Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>640</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Disabled:</label>
		</control>
		<control>
			<description>IsDisabled</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>640</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.Posters.SelectedPosterIsDisabled</label>
		</control>

		<control>
			<description>Is Default Label</description>
			<type>label</type>
			<id>0</id>
			<posX>40</posX>
			<posY>670</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Default</label>
		</control>
		<control>
			<description>Is Default:</description>
			<type>label</type>
			<id>0</id>
			<posX>300</posX>
			<posY>670</posY>
			<width>700</width>
			<font>font12</font>
			<label>#Anime3.Posters.SelectedPosterIsDefault</label>
		</control>

		<!--  ************** HIDDEN MENU *****************  -->
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>50</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>106</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>568</width>
			<height>900</height>
			<dimColor>00ffffff</dimColor>
			<control>
				<type>image</type>
				<posX>26</posX>
				<posY>78</posY>
				<width>367</width>
				<height>591</height>
				<texture>Backslide.png</texture>
				<colorDiffuse>fffffffff</colorDiffuse>
				<visible>!Control.HasFocus(50)</visible>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
				<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
				<visible>!Control.HasFocus(50)</visible>
				<control>
					<description>button group</description>
					<type>group</type>
					<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
					<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
					<posX>71</posX>
					<posY>121</posY>
					<layout>StackLayout</layout>
					<visible>!Control.HasFocus(50)</visible>
					<control>
						<description>Change Layout</description>
						<type>button</type>
						<id>2</id>
						<label>Change Layout</label>
						<onup>141</onup>
						<ondown>140</ondown>
						<onleft>50</onleft>
					</control>

					<control>
						<description>Fanart</description>
						<type>button</type>
						<id>140</id>
						<label>Fanart</label>
						<onleft>50</onleft>
						<onup>2</onup>
						<ondown>141</ondown>
					</control>

					<control>
						<description>Wide Banners</description>
						<type>button</type>
						<id>141</id>
						<label>Wide Banners</label>
						<onleft>50</onleft>
						<onup>140</onup>
						<ondown>2</ondown>
					</control>
				</control>
			</control>
		</control>

		<!-- :::::::::::::: THUMBNAILPANEL :::::::::::::: -->
		<control>
			<type>group</type>
			<description>group element</description>
			<id>28</id>
			<layout>StackLayout</layout>
			<posX>60</posX>
			<posY>97</posY>
			<control>
				<description>composite control consisting of a thumbnail panel and filmstrip</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>Graphical Thumbpanel</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<posX>30</posX>
					<posY>85</posY>
					<width>1200</width>
					<height>620</height>
					<spinPosX>1145</spinPosX>
					<spinPosY>675</spinPosY>
					<imageFolderFocus>Picture_cover.png</imageFolderFocus>
					<frame>Picture_cover.png</frame>
					<frameFocus>Picture_cover.png</frameFocus>
					<background>Coverbig.png</background>
					<!-- Large Thumbnails -->
					<itemWidthBig>150</itemWidthBig>
					<itemHeightBig>260</itemHeightBig>
					<textureWidthBig>150</textureWidthBig>
					<textureHeightBig>260</textureHeightBig>
					<thumbWidthBig>130</thumbWidthBig>
					<thumbHeightBig>260</thumbHeightBig>
					<thumbPosXBig>8</thumbPosXBig>
					<thumbPosYBig>0</thumbPosYBig>
					<!-- Small Thumbnails -->
					<itemWidth>211</itemWidth>
					<itemHeight>146</itemHeight>
					<textureWidth>211</textureWidth>
					<textureHeight>130</textureHeight>
					<thumbWidth>190</thumbWidth>
					<thumbHeight>106</thumbHeight>
					<thumbPosX>10</thumbPosX>
					<thumbPosY>10</thumbPosY>
					<thumbZoom>no</thumbZoom>
					<spinCanFocus>no</spinCanFocus>
					<enableFocusZoom>no</enableFocusZoom>
					<textXOff>10</textXOff>
					<textYOff>-5</textYOff>
					<unfocusedAlpha>150</unfocusedAlpha>
					<onleft>2</onleft>
					<onright>2</onright>
					<font>font11</font>
				</control>
				<control>
					<description>Filmstrip view</description>
					<type>filmstrip</type>
					<dimColor>90ffffff</dimColor>
					<id>50</id>
					<scrollOffset>2</scrollOffset>
					<posX>60</posX>
					<posY>120</posY>
					<spinPosY>-50</spinPosY>
					<spinPosX>-50</spinPosX>
					<spinCanFocus>no</spinCanFocus>
					<width>1244</width>
					<height>720</height>
					<onup>2</onup>
					<onleft>2</onleft>
					<thumbWidth>243</thumbWidth>
					<thumbHeight>360</thumbHeight>
					<thumbPosX>13</thumbPosX>
					<thumbPosY>11</thumbPosY>
					<itemWidth>245</itemWidth>
					<itemHeight>360</itemHeight>
					<textureWidth>275</textureWidth>
					<textureHeight>395</textureHeight>
					<imageFolderFocus>Picture_cover.png</imageFolderFocus>
					<frame>Picture_cover.png</frame>
					<frameFocus>Picture_cover.png</frameFocus>
					<background>Coverbig.png</background>
					<thumbs flipY="true" diffuse="Thumb_Mask.png"></thumbs>
					<InfoImage flipY="true" diffuse="Thumb_Mask.png"></InfoImage>
					<showFrame>yes</showFrame>
					<showFolder>no</showFolder>
					<showBackGround>no</showBackGround>
					<showInfoImage>no</showInfoImage>
					<visible>facadeview.filmstrip</visible>
					<thumbAnimation effect="zoom" start="100,100" end="130,130" time="200">focus</thumbAnimation>
					<thumbAnimation effect="zoom" start="130,130" end="100,100" time="200">unfocus</thumbAnimation>
				</control>
			</control>
		</control>

	</controls>
</window>