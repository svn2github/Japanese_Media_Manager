                <StackPanel Orientation="Horizontal"   DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="5,0,5,0">


                    <Button Name="btnAbout"  Margin="2" Style="{DynamicResource FlatButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center" Text="About" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Button>


                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>

